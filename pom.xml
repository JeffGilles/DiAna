    <contributors>
            <contributor>
                    <name>Nicolas Chiaruttini</name>
                    <url>http://biop.epfl.ch/INFO_Facility.html</url>
                    <roles><role>maintainer</role></roles>
                    <properties><id>NicoKiaru</id></properties>
            </contributor>
    </contributors>
    <mailingLists>
            <mailingList>
                    <name>Image.sc Forum</name>
                    <archive>https://forum.image.sc/</archive>
            </mailingList>
    </mailingLists>
    
    <properties>
        <imagej.path>/Users/jeffgilles/Documents/Fiji.app/</imagej.path>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copytoplugins</id>
                        <phase>install</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <copy todir="${imagej.path}/plugins/" file="target/${project.build.finalName}.jar"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
                <id>jitpack.io</id>
                <url>https://jitpack.io</url>
        </repository>
        <repository>
                <id>imagej.public</id>
                <url>http://maven.imagej.net/content/groups/public</url>
        </repository>
        <repository>
            <id>imagej.net</id>
            <url>http://maven.imagej.net/content/repositories/releases/</url>
        </repository>
	</repositories>
    <dependencies>
        <dependency>
            <groupId>net.imagej</groupId>
            <artifactId>ij</artifactId>
            <version>1.53s</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.framagit.mcib3d</groupId>
            <artifactId>mcib3d-core</artifactId>
            <version>4.0.93</version>
            <type>jar</type>
        </dependency>
    </dependencies>

</project>